{
    // Vercel deployment configuration for Atlan Customer Support Center
    // This file configures how the Flask application is deployed on Vercel
    
    "builds": [
      // Build configuration: Use Python runtime for app.py
      { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
      // Route all requests to the Flask application
      { "src": "/(.*)", "dest": "app.py" }
    ]
  }
  